<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="deskPersistenceManager" class="org.symphonyoss.collaboration.virtualdesk.persistence.DeskPersistenceManager">
    	<constructor-arg ref="serviceConfiguration" />
        <property name="dataSource" ref="dataSource"/>
        <property name="transactionManager" ref="transactionManager"/>
        <property name="deskIDGenerator" ref="deskIDGenerator"/>
    </bean>
    
    <bean id="deskIDGenerator" class="org.symphonyoss.collaboration.virtualdesk.persistence.DeskIDGenerator">
    	<constructor-arg value="50" />
        <property name="dataSource" ref="dataSource"/>
    </bean>
    
   	<bean id="configurationManager" class="org.symphonyoss.collaboration.virtualdesk.config.ConfigurationManager" init-method="init" />

   	<bean id="serviceConfiguration" class="org.symphonyoss.collaboration.virtualdesk.config.ServiceConfiguration" init-method="init">
    	<constructor-arg>
			<bean id="subDomainValue" class="org.springframework.beans.factory.config.PropertyPathFactoryBean">
	 			<property name="targetObject" ref="configurationManager" />
	 			<property name="propertyPath" value="subDomain"/>
			</bean>
    	</constructor-arg>
   		<constructor-arg ref="dataSource" />
   		<property name="serviceID" value="50"/>
   		<property name="historySearchEnabled" value="${es.enabled}"/>
   	</bean>

    
    <bean id="virtualDeskService" class="org.symphonyoss.collaboration.virtualdesk.VirtualDeskService">
    	<constructor-arg ref="serviceConfiguration" />
    	<constructor-arg ref="deskDirectory" />
    	<constructor-arg ref="serviceController" />
    	<constructor-arg ref="deskController" />
    	<constructor-arg ref="conversationController" />
    </bean>

    <bean id="deskDirectory" class="org.symphonyoss.collaboration.virtualdesk.muc.DeskDirectory">

    	<constructor-arg ref="deskPersistenceManager" />
    </bean>
    
    <bean id="serviceController" class="org.symphonyoss.collaboration.virtualdesk.ServiceController">
    	<constructor-arg ref="deskDirectory" />
    </bean>
    
    <bean id="deskController" class="org.symphonyoss.collaboration.virtualdesk.DeskController">
    	<constructor-arg ref="serviceConfiguration" />
    	<constructor-arg ref="deskDirectory" />
    </bean>
    
	<bean id="conversationController" class="org.symphonyoss.collaboration.virtualdesk.ConversationController">
    	<constructor-arg ref="serviceConfiguration" />
    	<constructor-arg ref="deskDirectory" />
    </bean>

    <!-- the DataSource (parameterized for configuration via a PropertyPlaceHolderConfigurer) -->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/virtualdesk?useUnicode=yes&amp;characterEncoding=utf8"/>
        <property name="username" value="root"/>
        <property name="password" value="Welcome1"/>
    </bean>
    
	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
    	<property name="dataSource" ref="dataSource"/>
  	</bean>

	<!-- History Searcher (Elastic Search Wrapper) -->
	<bean id="historySearcher" class="org.symphonyoss.collaboration.virtualdesk.search.HistorySearcher">
		<constructor-arg value="${es.cluster.name}" />
		<constructor-arg value="${es.hosts}" />
	</bean>
	
	<bean id="historySearcherSingleton" class="org.symphonyoss.collaboration.virtualdesk.search.HistorySearcherSingleton">
		<property name="historySearcher" ref="historySearcher" />
	</bean>
  	
  	<!-- Properties Loader -->
  	<bean id="propertyPlaceholderConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">  
		<property name="locations">  
    		<list>  
      			<value>classpath:config.properties</value>  
    		</list>  
  		</property>  
	</bean>
  	


</beans>